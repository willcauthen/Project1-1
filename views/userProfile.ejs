            <div id="signup">   
                <h1>Edit your profile information</h1>
                <form  id ='profileForm'>
                    <div class="top-row">
                        <div id='field1' class="field-wrap">
                          <label>
                            First Name<span class="req">*</span>
                          </label>
                          <input type="text" name='firstName' id='firstName' required autocomplete="off" />
                        </div>
                        <div id='field2' class="field-wrap">
                          <label>
                            Last Name<span class="req">*</span>
                          </label>
                          <input name ='lastName' id='lastName' type="text"required autocomplete="off"/>
                        </div>
                    </div>
                    <div id='field3' class="field-wrap">
                        <label>
                          Email Address<span class="req">*</span>
                        </label>
                        <input type="email" name ="email" id= "email" required autocomplete="off"/>
                    </div>
                    <div id='field5' class="field-wrap">
                        <label>
                          Network<span></span>
                        </label>
                        <input type="text" name ="network" id= "network" required autocomplete="off"/>
                    </div>
                    <p class="forgot"><a href="">The network that you belong to</a></p>
                    <div id='field6' class="field-wrap">
                        <label>
                          Medical history<span></span>
                        </label>
                        <input type="text" name ="record" id= "record" required autocomplete="off"/>
                    </div>
                     <p class="forgot"><a href="">write keywords separated with ','</a></p>
                    <button type="submit" id='update' class="button button-block"/>Update</button>
                </form>
